# --- Build stage ---
FROM node:22 AS build

WORKDIR /app

# Copy Astro project
COPY ./readers-frontend /app

# Install deps and build
RUN npm install
RUN npm run build -- --config astro.config.ts

# --- Runtime stage ---
FROM node:22-slim AS runtime

WORKDIR /app

# Copy built output only
COPY --from=build /app/dist ./dist
COPY --from=build /app/package*.json ./

RUN npm install

ENV PORT=4321
ENV HOST=0.0.0.0

EXPOSE 4321

CMD ["node", "dist/server/entry.mjs"]
