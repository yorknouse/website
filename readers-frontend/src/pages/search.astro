---
import SearchResults from "@components/SolidJS/SearchResults";
import Layout from "src/layouts/Layout.astro";

let baseUrl = import.meta.env.BASE_URL;

baseUrl = baseUrl.slice(0, baseUrl.length - 1);

const apiBase = import.meta.env.API_BASE_URL;
---

<Layout title="Welcome to Nouse" active={undefined} style={"nouse"}>
  <main class="px-[3%] pt-8 sm:px-[0.5%] 2xl:px-[13%]">
    <SearchResults client:only baseUrl={baseUrl} apiAddress={`${apiBase}/api/frontend/searchSuggestions`} />
  </main>
</Layout>
